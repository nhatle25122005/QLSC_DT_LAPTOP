<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/edtMaPhieu" android:hint="Mã phiếu" android:inputType="text" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/edtTenSanPham" android:hint="Tên sản phẩm" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/edtYeuCau" android:hint="Yêu cầu" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/edtThanhTien" android:hint="Thành tiền" android:inputType="numberDecimal" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/edtNgayTao" android:hint="Ngày tạo" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/edtTinhTrang" android:hint="Tình trạng" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/edtGhiChu" android:hint="Ghi chú" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
